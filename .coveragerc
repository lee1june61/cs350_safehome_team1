[run]
branch = True
source = src/interfaces
omit = 
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    # GUI code (tkinter) - hard to unit test
    */*_ui.py
    */screens/*
    */control_panel_states/*
    */dialogs/*
    */pages/main_page.py
    */pages/login_page.py
    */pages/main_page/*
    */pages/*/left_panel.py
    */pages/*/right_panel.py
    */*_handler.py
    */*_manager.py
    */*_updater.py
    */*_renderer.py
    */*_drawer.py
    */*_loader.py
    */*_page.py
    # Additional GUI helpers
    */*_controller.py
    */*_definitions.py
    */*_form.py
    */*_display.py
    */*_controls.py
    */*_saver.py
    */*_resetter.py
    */*_validator.py
    */messages.py
    */page_helpers.py

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError

[html]
directory = htmlcov

